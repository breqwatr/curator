---
# Remember, leave a key empty if there is no value.  None will be a string,
# not a Python "NoneType"
client:
  hosts:
    - {{host}}
  port: {{port}}
  url_prefix:
  use_ssl: False
  certificate:
  client_cert:
  client_key:
  ssl_no_validate: False
  {% if ELASTICSEARCH_USER != "" %}username: {{user}}{% endif  %}
  {% if ELASTICSEARCH_PASS != "" %}password: {{pass}}{% endif  %}
  http_auth: 
  timeout: 30
  master_only: False
logging:
  loglevel: INFO
  logfile:
  logformat: default
  blacklist: ['elasticsearch', 'urllib3']
